pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    stages {
        stage('GIT CHECKOU') {
            steps {
               git branch: 'main', url: 'https://github.com/vikicr7/vivek-gaming.git'
            }
        }
    
    stage('MAVEN COMPILEr') {
            steps {
                sh "mvn compile"
            }
        }
        
        stage('MAVEN NEW TESTING') {
            steps {
                sh "mvn test"
            }
        }
        
        stage('TRIVY FILESYSTEM SCAN') {
            steps {
                sh "trivy fs --format table -o trivy-fs-report.html ."
            }
        }
        stage('MAVEN BUILD') {
            steps {
               sh "mvn package"
            }
        }
        
       stage('BUILD & TAG DOCKER IMAGES') {
            steps {
               script {
                   withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                            sh "docker build -t vikicr7/game:latest ."
                    }
               }
            }
        } 
    
             stage('IMAGE SCAN') {
            steps {
                sh "trivy image --format table -o trivy-image-report.html vikicr7/game:latest "
            }
        }   
            
        stage('DOCKER DEPLOYMENT') {
            steps {
                sh "docker run -d -p 8090:8080 vikicr7/game:latest"
            }
        }   
    }
}
